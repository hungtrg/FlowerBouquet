@page
@model FlowerBouquetManagement.Pages.Customer.IndexModel

@{
    ViewData["Title"] = "Index";
}

<form method="get" class="form-inline mb-3">
    <div class="row mb-3">
        <div class="col-4">
            <h2>Customer List</h2>
        </div>
        <div class="col-auto">
            <a asp-page="Create" class="btn btn-outline-primary">Create New</a>
        </div>
        <div class="col-5">
            <input class="form-control" type="text" placeholder="Search..." aria-label="Search" asp-for="search">
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-outline-secondary">Search</button>
        </div>
    </div>
</form>

@if (Model.Customer.Count == 0)
{
    <div class="alert alert-warning">No customers found.</div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].CustomerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer[0].Bithday)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Customer)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bithday)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.CustomerId" class="btn btn-sm btn-outline-primary mr-1">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.CustomerId" class="btn btn-sm btn-outline-info mr-1">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.CustomerId" class="btn btn-sm btn-outline-danger mr-1">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}