@if (Context.Session.GetString("ROLE") == "ADMIN")
{
    <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Hello, Admin!
    </a>
    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        <a class="dropdown-item" asp-page="/Customer/Index">Customers</a>
        <a class="dropdown-item" asp-page="/Flower/Index">Flowers</a>
        <a class="dropdown-item" asp-page="/Order/Index">Orders</a>
        <a class="dropdown-item" asp-page="/Account/Logout">Logout</a>
    </div>
}
else if (Context.Session.GetString("ROLE") == "USER")
{
    <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Hello, @Context.Session.GetString("FULLNAME") !
    </a>
    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        <a class="dropdown-item" asp-page="/Flower/Index">Flowers</a>
        <a class="dropdown-item" asp-page="/Account/Profile">Profile</a>
        <a class="dropdown-item" asp-page="/Cart/Cart">View Cart</a>
        <a class="dropdown-item" asp-page="/Order/MyOrder">My Order</a>
        <a class="dropdown-item" asp-page="/Account/Logout">Logout</a>
    </div>
}
else
{
    <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Login/Register
    </a>
    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        <a class="nav-link text-dark" asp-page="/Account/Login">Login</a>
        <a class="nav-link text-dark" asp-page="/Account/Register">Register</a>
    </div>
}